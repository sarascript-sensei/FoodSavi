<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#dde4dd"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="100dp"
    tools:context=".ui.login.CustomerLoginActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Вход для пользователей"
        android:textAlignment="center"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

    <EditText
        android:id="@+id/layoutName"
        android:textColor="@color/colorPrimary"
        android:hint="@string/prompt_name"
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/layoutPassword"
            android:textColor="@color/colorPrimary"
            android:hint="@string/prompt_password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <ProgressBar
        android:id="@+id/loading"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

    <Button
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/colorPrimary"
        android:id="@+id/click"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="@string/action_sign_in"></Button>

    <TextView
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:id="@+id/loginText"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Создать новый аккаунт?"
        android:textAlignment="center"
        />

    <TextView
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:id="@+id/RestaurantText"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Я владелец ресторана"
        android:textAlignment="center"
        />
</LinearLayout>